/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Independent Configuration - No External Dependencies
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Configuration that ensures complete independence from external platforms
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

params {
    // Disable any external platform features
    custom_config_base = null
    
    // Force local preferences
    enable_conda = true
    
    // Remove any external reporting/tracking
    hook_url = null
}

process {
    // Ensure no platform-specific settings
    beforeScript = ''
    afterScript = ''
    
    // Force BioContainers for all processes
    withLabel: '.*' {
        conda = true
    }
}

// Disable any external integrations
workflow {
    onComplete {
        log.info "Pipeline completed successfully!"
        // No external notifications
    }
    
    onError {
        log.error "Pipeline execution failed!"
        // No external error reporting
    }
}
