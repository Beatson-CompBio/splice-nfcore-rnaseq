/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Independent Configuration - No External Dependencies
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Ensures complete independence from external platforms and services
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

params {
    // Disable any external platform features
    custom_config_base = null
    
    // Force local execution preferences
    enable_conda = false
    
    // Remove any external reporting/tracking
    hook_url = null
    
    // Disable any nf-core specific integrations
    validationSkipDuplicateCheck = true
    validationS3PathCheck = false
}

process {
    // Remove any external scripts or hooks
    beforeScript = ''
    afterScript = ''
    
    // Ensure no external reporting
    publishDir = [
        [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode ?: 'copy',
            pattern: '*'
        ]
    ]
}

// Disable Wave and external container services
wave.enabled = false
